

mixin site-radio-group(obj)

  .form-element
    fieldset.form-element__fieldset
      legend.form-element__legend !{obj.label}
      ul.site-radio-group
        each option in obj.options
          li.site-radio
            input(type = "radio" id = option.id class = "site-radio__input" name = option.name checked = option.checked)
            label(class = "site-radio__label" for = option.id) !{option.label}