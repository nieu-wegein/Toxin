include ../site-slider/site-slider
include ../star-rate/star-rate
include ../../helpers/decline-js
include ../../helpers/separate-price-js


mixin room-card(id, room)

  article(class = ["room-card", room.luxe ? "room-card_luxe"  : ""] id = id)
    h2.room-card__heading Комната №  #{room.number}
    a(class = "room-card__full-page-link" href = "../room-details/room-details.html?id=" + room.number)
      .room-card__body
        .room-card__info
          p.room-card__room-number №
            span.room-card__room-number-value #{room.number}
          p.room-card__price
            span.room-card__price-value #{separatePrice(room.price) + room.currency}
            |  в сутки
        .room-card__rating
          +star-rate({type: "display", name: id + "_room-rate", id: id + "_room-rate", stars: room.stars})
          p.room-card__testimonial-counter
            span.room-card__testimonial-count #{room.testimonialsList.count}
            //-Не нужно склонение?
            |  Отзывов
    .slider-container
      +site-slider(room.imgList)
    .room-card__outline-wrapper //- focus-within