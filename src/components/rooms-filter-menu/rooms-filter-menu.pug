include ../site-input/site-input
include ../site-dropdown/site-dropdown
include ../site-range-slider/site-range-slider
include ../site-checkbox/site-checkbox


mixin rooms-filter-menu()
  form.rooms-filter-menu
    +site-dropdown({label: "Даты пребывания в отеле", id: "filter-dates", text: "ДД.ММ.ГГГГ - ДД.ММ.ГГГГ", modifiers: {calendar: {type: "range"}, buttons: true}})
    +site-dropdown({
      label: "Гости", id: "filter-guests", text: "Сколько гостей", options: [
        {name: "Взрослые", value: "adults", declination: ["гость", "гостя", "гостей"]},
        {name: "Дети", value: "children", declination: ["гость", "гостя", "гостей"]},
        {name: "Младенцы", value: "babies", declination: ["гость", "гостя", "гостей"]}
      ],
      modifiers: {buttons: true}
    })
    +site-range-slider({label: "Диапазон цены", id: "filter-price", description: "Стоимость за сутки пребывания в номере", min: 1, max: 15485, startVal: 5000, endVal: 10000})
    +site-checkbox-group({fieldset: "Правила дома", options: [
        {label: "Можно курить", id: "smoking"},
        {label: "Можно с питомцами", id: "animals", checked: true},
        {label: "Можно пригласить гостей <br> (до 10 человек)", id: "invitation", checked: true}
      ]
    })
    +site-checkbox-group({fieldset: "Доступность", options: [
      {label: "Широкий коридор", id: "wide-corridor", note: "Ширина коридоров в номере <br> не менее 91 см."},
      {label: "Помощник для инвалидов", id: "assistant", note: "На 1 этаже вас встретит специалист  и проводит до номера."},
    ],
    modifiers: {rich: true}
    })
    +site-dropdown({
      label: "Удобства номера", id: "amenities", text: "Комнаты",
      options: [
        {name: "Спальни", value: "bedrooms", declination: ["спальня", "спальни", "спален"]},
        {name: "Кровать", value: "beds", declination: ["кровать", "кровати", "кроватей"]},
        {name: "Ванные комнаты", value: "bathrooms", declination: ["ванная комната", "ванные комнаты", "ванных комнат"]}
      ]
    })
    .rooms-filter-menu__checkbox-wrapper
      +site-checkbox-group({
        fieldset: "Дополнительные удобства", options: [
          {label: "Завтрак", id: "breakfast"},
          {label: "Письменный стол", id: "desk", checked: true},
          {label: "Стул для кормления", id: "feeding chair", checked: true},
          {label: "Кроватка", id: "crib", checked: true},
          {label: "Телевизор", id: "TV"},
          {label: "Шампунь", id: "shampoo"},
        ],
        modifiers: {expandable: true}
      })
