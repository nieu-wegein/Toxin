
mixin rate-button(obj)
  div(class = "rate-button" id = obj.id)
    input(type = "radio" id = obj.id + "_star-5" class = "rate-button__radio" name = obj.name value = "5 stars" checked = obj.stars === 5)
    label(class = "rate-button__label" for = obj.id + "_star-5")
      span.rate-button__label-text 5 звезд
    input(type = "radio" id = obj.id + "_star-4" class = "rate-button__radio" name = obj.name value = "4 stars" checked = obj.stars === 4)
    label(class = "rate-button__label" for = obj.id + "_star-4")
      span.rate-button__label-text 4 звезды
    input(type = "radio" id = obj.id + "_star-3" class = "rate-button__radio" name = obj.name value = "3 stars" checked = obj.stars === 3)
    label(class = "rate-button__label" for = obj.id + "_star-3")
      span.rate-button__label-text 3 звезды
    input(type = "radio" id = obj.id + "_star-2" class = "rate-button__radio" name = obj.name value = "2 stars" checked = obj.stars === 2)
    label(class = "rate-button__label" for = obj.id + "_star-2")
      span.rate-button__label-text 2 звезды
    input(type = "radio" id = obj.id + "_star-1" class = "rate-button__radio" name = obj.name value = "1 star" checked = obj.stars === 1)
    label(class = "rate-button__label" for = obj.id + "_star-1")
      span.rate-button__label-text 1 звезду

