doctype html
html(lang = "en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
    meta(name="keywords", content = "")
    meta(name="description", content=" ")
    link(rel = "stylesheet" href="https://fonts.googleapis.com/css?family=Material+Icons")
  body.form-elements-page
    .wrapper
      .header
        a(href = "../index/index.html")
          img.logo(src = "../img/min-logo.svg")
      .content
        .content__column
          +site-input(inputList[0])
          +site-input(inputList[1])
          +site-dropdown(dropdownList[0])
          +site-input(inputList[2])
          .date-dropdown-wrapper
            +site-dropdown(dropdownList[1])
            +site-dropdown(dropdownList[2])
          .filter-items-wrapper
            +site-dropdown(dropdownList[3])
          .filter-items-wrapper
            +site-input(dropdownList[4])
        .content__column
          .checkbox-wrapper
            +site-checkbox-group(checkboxList[0])
          +site-radio-group(radioList[0])
          +site-checkbox-group(checkboxList[1])
          +site-section({h3: "Like Button"})
            .like-buttons-wrapper
              +like-button(2)
              +like-button(12, true)
          +site-section({h3: "Rate Button"})
            .rate-buttons-wrapper
              +star-rate(rateButtonsList[0])
              +star-rate(rateButtonsList[1])
        .content__column
          .range-slider-wrapper
            +site-range-slider(rangeSliderList[0])
          +site-section({h3: "Buttons"})
            .site-buttons-wrapper
              each button in buttonsList
                +site-button(button)
          +site-section({h3: "Pagination"})
            +site-pagination({url: "/form-elements/form-elements.html", count: 3})
        .content__column
          .site-dropdowns-wrapper
            +site-dropdown(dropdownList[5])
            +site-dropdown(dropdownList[6])
        .content__column
          +site-dropdown(dropdownList[7])
        .content__column
          +site-dropdown(dropdownList[8])
        .content__column
          .expandable-checkbox-wrapper
            +site-checkbox-group(checkboxList[2])
            +site-checkbox-group(checkboxList[3])
        .content__column
          .rich-checkbox-wrapper
            +site-checkbox-group(checkboxList[4])
        .content__column
          +site-section({h3: "Bullet List"})
